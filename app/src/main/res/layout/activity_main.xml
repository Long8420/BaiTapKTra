<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_marginTop="40dp">
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/hoa" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10dp"></TextView>
    </LinearLayout>
    <EditText
        android:layout_width="510dp"
        android:layout_height="70dp"
        android:hint="email"
        android:textSize="25dp"
        android:elevation="8dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="40dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/blackcolor">
        </EditText>
    <EditText
        android:layout_width="510dp"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:elevation="8dp"
        android:gravity="center"
        android:hint="Mật Khẩu"
        android:inputType="textEmailAddress"
        android:textColor="@color/blackcolor"
        android:textSize="25dp"></EditText>
    <Button
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:id="@+id/Dnhap"
        android:text="Đăng nhập"
        android:textSize="20dp"
        android:textColor="@color/blackcolor"
        android:textAllCaps="false"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:elevation="15dp"
        android:background="@color/greencolor"/>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:orientation="horizontal"
        android:layout_marginLeft="30dp">
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="facebook"
        android:textSize="20dp"
        android:textColor="@color/blackcolor"
        android:textAllCaps="false"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:elevation="15dp"
        android:background="@color/colorPrimaryDark"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="gmail"
            android:textSize="20dp"
            android:textColor="@color/blackcolor"
            android:textAllCaps="false"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:elevation="15dp"
            android:background="@color/colorAccent"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password ?"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"></TextView>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account? Sign up now ?"
        android:textSize="25dp"></TextView>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="HỌ VÀ TÊN: NGUYỄN HUỲNH PHI LONG"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="80dp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="MSV:1811505310126"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="5dp">
    </TextView>
</LinearLayout>